{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}

    <div class="contener">
        <h1>Liste des articles</h1>
        <a href="/admin/products/add">Ajouter un produit</a>
        <table class="list-products">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
    	            <tr data-id={{product.id}}>
                        <td>{{product.id}}</td>
                        <td>{{product.title}}</td>
                        <td>
                            <button class="delete-product" data-id="{{product.id}}">Supprimer</button>
                            <a href="products/{{product.id}}">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

        <script src="/public/assets/js/admin.js"></script>

{% endblock %}
