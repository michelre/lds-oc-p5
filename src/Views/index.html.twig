{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <!--PRODUITS-->

    <h2>NOS DERNIERS PRODUITS</h2>
    <div class="ligneproduits">
        <div class="ligneleft2"></div>
        <i class="fas fa-circle"></i>
        <div class="ligneright2"></div>
    </div>

<!--IMAGES-->

    <div class="vignettes">

        {% for product in products %}
        <a href="/products/{{product.id}}" class="vignette">
           <figure><img src="/public/{{product.image}}" alt="camera1" />
            <figcaption>
                <h4>{{product.title}}</h4></br>
                <p>{{product.short_description ? product.short_description : 'Pas de description'}}</p>
                <div class="camera"><i class="fas fa-camera-retro"></i>
                </div>
            </figcaption>
        </figure>
        </a>
        {% endfor %}



    </div>
{% endblock %}
